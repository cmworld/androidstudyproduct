<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="15dp">
    
    <TextView 
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"  
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        />
    
    <TextView 
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="price"  
        android:textSize="18sp"
        android:textColor="@android:color/black"
        />
  	<Button
       android:id="@+id/btn_num_dec"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:gravity="center_vertical|center_horizontal"
       android:background="@drawable/cart_btn_border"
       android:text="@string/num_dec"
       android:textColor="#666666"
       android:textSize="16sp" />

    <EditText
        android:id="@+id/buynum"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/cart_input_border"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:hint="0"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

  	<Button
       android:id="@+id/btn_num_inc"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:gravity="center_vertical|center_horizontal"
       android:background="@drawable/cart_btn_border_on"
       android:text="@string/num_inc"
       android:textColor="#666666"
       android:textSize="16sp" />
</LinearLayout>